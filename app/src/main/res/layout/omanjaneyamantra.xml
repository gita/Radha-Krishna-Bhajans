<?xml version="1.0" encoding="utf-8"?>






<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/omanjaneyamantra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"

    android:background="@drawable/hanuman"
    android:alpha="1"
    tools:context="com.hanuman.radha.krishna.MainActivity">
    <RelativeLayout
        android:id="@+id/mantra1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radhakrishna">

            <ImageView
                android:id="@+id/flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/flower" />

            <ImageView
                android:id="@+id/flower2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/flower"
                android:layout_weight="1"
                android:src="@drawable/flower" />


            <ImageView
                android:id="@+id/flower4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/flower2"
                android:layout_weight="1"
                android:src="@drawable/flower" />


            <ImageView
                android:id="@+id/flower6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/flower4"
                android:layout_weight="1"
                android:src="@drawable/flower" />

        </LinearLayout>


        <EditText
            android:id="@+id/textView16"
            android:layout_width="176dp"
            android:layout_height="50dp"
            android:layout_above="@+id/radhakrishnahanuman"
            android:background="#ffffff"
            android:digits="1234567890"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="Input number"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal|bold" />


        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="250dp"

            android:layout_height="30dp"
            android:layout_above="@+id/textView13"

            android:layout_toRightOf="@id/textView16"
            android:maxHeight="20dp"
            android:minHeight="20dp" />


        <TextView

            android:id="@+id/textView13"
            android:layout_width="100dp"

            android:layout_height="20dp"

            android:layout_above="@+id/radhakrishnahanuman"
            android:layout_toRightOf="@id/textView16"
            android:gravity="center"
            android:text="COUNT:"
            android:textColor="#ffffff"
            android:textSize="15sp"

            android:textStyle="normal|bold"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/radhakrishnahanuman">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"


                android:layout_alignParentBottom="true"
                android:textColor="#000000"
                android:src="@drawable/radhakrishna3"
                android:background="@drawable/buttonshape2"
                android:shadowColor="#A8A8A8"
                android:gravity="center"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:id="@+id/btn4"
                android:textStyle="normal|bold" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"


                android:layout_alignParentBottom="true"
                android:textColor="#000000"
                android:src="@drawable/radhakrishna7"
                android:background="@drawable/buttonshape2"
                android:shadowColor="#A8A8A8"
                android:gravity="center"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:id="@+id/btn5"
                android:layout_toRightOf="@id/btn4"
                android:textStyle="normal|bold" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"


                android:layout_alignParentBottom="true"
                android:textColor="#000000"
                android:src="@drawable/radhakrishna11"
                android:background="@drawable/buttonshape2"
                android:shadowColor="#A8A8A8"
                android:gravity="center"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:id="@+id/btn6"
                android:layout_toRightOf="@id/btn5"
                android:textStyle="normal|bold" />


            <ImageButton
                android:id="@+id/btn1"
                android:layout_width="60dp"


                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/btn6"
                android:background="@drawable/buttonshape2"
                android:gravity="center"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:src="@android:drawable/ic_media_play"
                android:textColor="#000000"
                android:textStyle="normal|bold" />

            <ImageButton
                android:id="@+id/btn2"
                android:layout_width="60dp"
                android:layout_height="50dp"

                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/btn1"
                android:background="@drawable/buttonshape2"
                android:gravity="center"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:src="@android:drawable/ic_media_pause"
                android:textColor="#000000"
                android:textStyle="normal|bold" />

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="60dp"

                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/btn2"
                android:background="@drawable/buttonshape2"
                android:gravity="center"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:src="@android:drawable/checkbox_off_background"
                android:textColor="#000000"
                android:textStyle="normal|bold" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>

